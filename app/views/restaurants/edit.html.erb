<div id="edit-restaurant" class="container mt-5">
  <h1>Edit <%= @restaurant.name %></h1>
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
    <%= f.submit "edit the restaurant", class: "btn btn-primary" %>
  <% end %>
    <%= link_to "Back to list", restaurants_path, class: "btn btn-primary mt-4" %>
</div>
