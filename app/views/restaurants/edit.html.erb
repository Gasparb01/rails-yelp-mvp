<div class="container">
  <h1>Edit your restaurant</h1>
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
    <%= f.submit "edit the restaurant", class: "btn btn-primary" %>
  <% end %>
</div>
