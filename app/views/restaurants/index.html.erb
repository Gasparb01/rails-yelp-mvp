<h1 class="container text-center mt-4">Restaurants</h1>
<div id="restaurants-list" class="container mt-5 text-center">
  <div>
    <ul>
      <% @restaurants.each do |restaurant| %>
      <li class="mb-3">
       <strong class="h3"><%= restaurant.name %></strong></li>
       <p> <%= link_to "Delete", restaurant_path(restaurant),
        method: :delete,
        data: { confirm: "Are you sure?" } %>//
        (<%= link_to "See details", restaurant_path(restaurant)%>)</p>
      <% end %>
    </ul>
  <%= link_to "New restaurant", new_restaurant_path, class: "btn btn-primary text-white ml-5" %>
  </div>
</div>
