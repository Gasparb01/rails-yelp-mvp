<div id="create-restaurant" class="container mt-5">
<h1>Create a new restaurant</h1>
<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>
  <%= f.submit "add the restaurant", class: "btn btn-primary" %>
<% end %>
<br>
<br>
<%= link_to "Back to the list", restaurants_path, class: "btn btn-primary" %>
</div>
