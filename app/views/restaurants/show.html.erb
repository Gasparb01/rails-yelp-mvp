<div class="container">
 <div class="container"><h1>Welcome to <%= @restaurant.name %></h1></div>
  <h2> Address: <%= @restaurant.address %> </h2>
  <h2> Contact us: <%= @restaurant.phone_number %></h2>
  <h2>Type: <strong><%= @restaurant.category %></strong> </h2>

  <h2>Reviews:</h2>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li><%= review.content %> (<%= review.rating %>)</li>
    <% end %>
  </ul>



  <%= link_to "Edit", edit_restaurant_path %>
  <br>
  <br>
  <%= link_to "Back to list", restaurants_path %>
  <br>
  <br>
  <br>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
</div>
