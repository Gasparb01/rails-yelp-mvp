<div id="show-restaurant" class="container text-center mt-5">
 <div class=""><h1>Welcome to <%= @restaurant.name %></h1></div>
  <h2> Address: <%= @restaurant.address %> </h2>
  <h2> Contact us: <%= @restaurant.phone_number %></h2>
  <h2>Type: <strong><%= @restaurant.category %></strong> </h2>

  <h2>Reviews</h2>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li><%= review.content %> (<%= review.rating %>)</li>
    <% end %>
  </ul>



  <%= link_to "Edit", edit_restaurant_path, class: "btn btn-primary text-white"%>
  <br>
  <br>
  <%= link_to "Back to list", restaurants_path, class: "btn btn-primary text-white" %>
  <br>
  <br>
  <br>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary text-white" %>
</div>
