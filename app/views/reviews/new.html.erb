
<div class="container">
<h1>Create a new review</h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "add the review", class: "btn btn-primary" %>
<% end %>
<br>
<br>
<%= link_to "Back to your review", restaurant_path(@restaurant) %>
</div>
